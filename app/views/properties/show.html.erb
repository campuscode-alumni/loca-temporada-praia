<div class="titulo">
<h1><%= @property.title %></h1>
</div>
<section id="show-espaços">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <%= image_tag @property.main_photo.url, class:'img-fluid rounded mb-3 mb-md-0' %>
      </div>
        <div class="col-md-5 ">
          <ul id="proposta-lista">
            <h3>Descrição do imóvel</h3>
            <p><%= @property.description %></p>
            <li>Região: <%= @property.region.name %></li>
            <li>Tipo do imóvel: <%= @property.property_type.name %></li>
            <li>Finalidade do imóvel: <%= @property.rent_purpose %></li>
            <li>Área: <%= @property.area %>m²</li>
            <li>Quantidade de cômodos: <%= @property.room_quantity %></li>
            <li>Possui acessibilidade: <%= @property.accessibility? ? 'Sim' : 'Não' %></li>
            <li>Aceita animais: <%= @property.allow_pets? ? 'Sim' : 'Não' %></li>
            <li>Aceita fumantes: <%= @property.allow_smokers? ? 'Sim' : 'Não' %></li>
            <li>Ocupação máxima: <%= @property.maximum_guests %></li>
            <li>Mínimo de diárias: <%= @property.minimum_rent %></li>
            <li>Máximo de diárias: <%= @property.maximum_rent %></li>
            <li>Valor da diária: R$ <%= @property.daily_rate %></li>
          </ul>
          <% @property.price_ranges.each do |price_range| %>
            <ul>
              <h4><%= price_range.description%></h4>
              <li>Data de Inicio: <%= l price_range.start_date%> </li>
              <li>Data Final: <%= l price_range.end_date%> </li>
              <li>Preço da diária: <%= number_to_currency price_range.daily_rate %> </li>
              
            </ul>
         <% end %>
          <div id="links">
            <% if user_signed_in? %>
              <%= link_to 'Fazer proposta', new_property_proposal_path(@property), class:'btn btn-primary btn-proposal' %>
            <% else %>
              <%= link_to 'Editar', edit_property_path, class: 'btn btn-danger btn-editar' %>
              <%= link_to 'Cadastrar temporadas', new_property_price_range_path(@property) ,class: 'btn btn-success btn-editar' %>
            <% end %>
          </div>
            
          

      </div>
    </div>
</section>


  