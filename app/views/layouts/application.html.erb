<!DOCTYPE html>
<html>
  <head>
    <title>AlugaTemporada</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if realtor_signed_in? %>
      <%= link_to('Propriedades', by_realtor_path) %>
    <% end %>
    <%= render partial: 'shared/nav_bar' %>
    <div class="container">
      <p><%= flash[:success] %></p>
      <p><%= flash[:notice] %></p>
      <p><%= flash[:alert] %></p>
      <%= yield %>
    </div>
  </body>
</html>
